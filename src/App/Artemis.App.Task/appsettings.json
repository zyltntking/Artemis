{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Kestrel": {
    "EndpointDefaults": {
      "Protocols": "Http1AndHttp2"
    }
  },
  "ConnectionStrings": {
    "RedisInstance": "192.168.2.221:6379,defaultDatabase=2",
    "ArtemisDb": "Host=192.168.2.221;Username=postgres;Password=1q2w3e$R;Database=Artemis;ApplicationName=Task",
    "MongoInstance": "mongodb://192.168.2.221:27017/Artemis",
    "RabbitMqInstance": "amqp://root:1q2w3e$R@192.168.2.221:5672"
  },
  "Aspire": {
    "StackExchange": {
      "Redis": {
        "ConfigurationOptions": {
          "ConnectTimeout": 5000,
          "ConnectRetry": 3
        }
      },
      "MongoDB": {
        "Driver": {
          "DisableHealthChecks": false
        }
      },
      "RabbitMQ": {
        "Client": {
          "DisableHealthChecks": false
        }
      },
      "Npgsql": {
        "EntityFrameworkCore": {
          "PostgreSQL": {
            "DbContextPooling": true
          }
        }
      }
    }
  },
  "Serilog": {
    "MinimumLevel": "Information",
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss.fff} {Level:u3}] [{ProcessId}|{ThreadId:000}] [{RequestId,22}] {Message:lj} from ({SourceContext}.{Method}){Properties:j}{NewLine}{Exception}"
        }
      },
      {
        "Name": "Debug",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss.fff} {Level:u3}] [{ProcessId}|{ThreadId:000}] [{RequestId,22}] {Message:lj} from ({SourceContext}.{Method}) {Properties:j}{NewLine}{Exception}"
        }
      },
      {
        "Name": "Async",
        "Args": {
          "configure": [
            {
              "Name": "File",
              "Args": {
                "path": "logs/log.log",
                "rollingInterval": "Day",
                "retainedFileCountLimit": 30,
                "rollOnFileSizeLimit": true,
                "fileSizeLimitBytes": 314572800,
                "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.ffffff} [{Level:u3}] [{ProcessId}|{ThreadId:000}] [{RequestId,22}] {Message:lj} from ({SourceContext}.{Method}) EventProperities: {Properties:j}{NewLine}{Exception}"
              }
            }
          ]
        }
      }
    ]
  },
  "Swagger": {
    "UserGrpc": true,
    "EnableInProduction": true,
    "Application": "Task Service",
    "XmlDocs": [
      "Artemis.Service.Protos.xml"
    ]
  },
  "AllowedHosts": "*"
}
